{
  "version": 2,
  "name": "difitnutri",
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "MONGO_URL": "@mongo-url",
    "JWT_SECRET": "@jwt-secret",
    "DB_NAME": "difitNutri",
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/src/index.js": {
      "maxDuration": 30
    }
  }
}